<div class=" indexcards container align-middle content">
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to item_path(item), :class => "exchange-link" do %>
      <div class="card-position">
        <div class="card-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url(<%= cl_image_path item.photo, :thumbnail :bright_face :height: 300, width: 400, crop: :fill if item.photo.present? %>);">
          <div class="homepage-desc">
            <p> Xchange! </p>
            <h5><%= item.name %></h5>
          </div>
           <div class="ownerphoto-card">
            <% if item.user.photo.present? %>
              <%= cl_image_tag item.user.photo, class: "owner-avatar" %>
            <% else %>
              <%= image_tag "smiley.jpg", class: "owner-avatar" %>
          <% end %>
          </div>
        </div>
      </div>
    <%end%>
    </div>
    <%end%>
  </div>
</div>


