
<%= simple_form_for(@deal) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :price %>
    <%= f.input :payer, collection: [@deal.answerer.email, @deal.requester.email] %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "exs-btn btn-submit" %>
  </div>
<% end %>
