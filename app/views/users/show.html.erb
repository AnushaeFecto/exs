
<center style= "padding-bottom: 30px;">
  <% if current_user %>
        <h3>Hope you're having a Saunier day, <%= @user.name %></h3>
      <% else %>
        <h3>Like <%= @user.name %>'s style?</h3>
      <% end %>
        <div class="card-profile">
            <% if @user.photo.present? %>
                <%= cl_image_tag @user.photo, width: 200, height: 200, radius: :max, crop: :fill %>
            <% else %>
                <%= image_tag "smiley.jpg", width: 200, height: 200, radius: :max, crop: :fill %>
            <% end %>
          <div class="profile-text">
            <% if @user == current_user %>
              <h3>My name: <%= @user.name %></h3>
              <h3>My story: <%= @user.description %></h3>
            <% else %>
              <h3>Learn some more about <%= @user.name %>:</h3>
              <h3><%= @user.description %></h3>
            <% end %>
          </div>
          <div class="bottom-right">
            <% if @user == current_user %>
              <%= link_to "Edit", edit_user_path(@user), class: "exs-btn btn-submit" %>
              <%= link_to "Add items" , new_item_path(current_user), class: "exs-btn btn-submit" %>
            <% end %>
          </div>
        </div>
        <div>
          <% if @user == current_user %>
            <h2>My Items</h2>
            <% end %>
        </div>
       <% if @user == current_user %>
        <div class="profile-container">
          <div class="row">
              <% @user.items.each do |item| %>
            <div class="col-xs-12 col-sm-4">
              <p> fml </p>
              <div>
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                        url(<%= cl_image_path item.photo, height: 300, width: 400, crop: :fill if item.photo.present? %>);">
                  </div>
                  <div class="card-text">
                      <%= link_to "View", item_path(item), id: "card-text-1"%>
                      <% if @user == current_user %>
                      <%= link_to "Edit", edit_item_path(item), id: "card-text-2"%>
                      <%= link_to "Delete", item_path(item), id: "card-text-3", method: :delete, data: { confirm: "Are you sure?" } %>
                      <% end %>
                  </div>
              </div>
            </div>
              <% end %>
          </div>
        </div>
        <% end %>

        <% if @user == current_user %>
        <h1> My Offers </h1>
        <div class="profile-container">
          <div clas="row">
          <% @user.requested_deals.each do |requested_deal| %>
            <div class="col-xs-12 col-sm-4">
                <% if requested_deal.answerer.photo.present? %>
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path requested_deal.answerer.photo, height: 300, width: 400, crop: :fill %>);">
                  <p> status </p>
                  <%= link_to "deal", deal_path(requested_deal), id: "card-text-2"%>
                  </div>
              <% else %>
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),<%= image_tag "smiley.jpg", width: 200, height: 200, radius: :max, crop: :fill %>;">
                  <p> status </p>
                  <%= link_to "deal", deal_path(requested_deal), id: "card-text-2"%>
                  </div>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>

        <% else %> <!-- if not the current user's page -->

        <div class="profile-container-deals">
            <div class="profile-container-deals-user1">
              <p> sdf </p>
              <div class="row">
              <% @user.items.each do |item| %>
                <div class="col-xs-12 col-sm-4">
                  <p> fml </p>
                  <div>
                    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                          url(<%= cl_image_path item.photo, height: 300, width: 400, crop: :fill if item.photo.present? %>);">
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="profile-container-deals-user2">
            <p> sdf </p>
            <div class="row">
            <% @user.items.each do |item| %>
              <div class="col-xs-12 col-sm-4">
                <p> fml </p>
                <div>
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                        url(<%= cl_image_path item.photo, height: 300, width: 400, crop: :fill if item.photo.present? %>);">
                  </div>
                </div>
              </div>
            <% end %>
            </div>
          </div>
      </div>
      <% end %>
</center>


